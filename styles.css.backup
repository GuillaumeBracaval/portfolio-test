/* =========================================
   1. SWISS-TECH DARK THEME
   ========================================= */
:root {
  /* --- Colors (Quiet Luxury) --- */
  --bg-color: #0B0B0C;
  /* Deep Obsidian */
  --surface-card: rgba(255, 255, 255, 0.03);
  --surface-hover: rgba(255, 255, 255, 0.05);
  --text-primary: #FAFAFA;
  /* Crisp White */
  --text-secondary: #A0A0A0;
  /* Neutral Silver */
  --text-tertiary: #666666;
  /* Dark Grey */
  --accent-color: #4BD0C0;
  /* Bio-Mint (Subtle) */

  /* --- Borders & Effects --- */
  --border-subtle: rgba(255, 255, 255, 0.06);
  --border-highlight: rgba(255, 255, 255, 0.12);
  --glow-subtle: 0 0 40px rgba(75, 208, 192, 0.03);

  /* --- Typography (Swiss Editorial) --- */
  --font-main: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;

  /* Scale */
  --text-xs: 0.75rem;
  /* 12px */
  --text-sm: 0.875rem;
  /* 14px */
  --text-base: 1rem;
  /* 16px */
  --text-lg: 1.125rem;
  /* 18px */
  --text-xl: 1.5rem;
  /* 24px */
  --text-2xl: 2rem;
  /* 32px */
  --text-3xl: 3rem;
  /* 48px */
  --text-display: 6rem;
  /* 96px - Iconic */

  /* --- Spacing (8pt/12pt Rhythm) --- */
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-6: 1.5rem;
  --space-8: 2rem;
  --space-12: 3rem;
  --space-16: 4rem;
  --space-24: 6rem;
  --space-32: 8rem;
  --space-48: 12rem;

  /* --- Layout --- */
  --container-max: 1400px;
  --container-padding: 4vw;
  --radius-sm: 4px;
  --radius-md: 12px;
  --radius-lg: 16px;

  /* --- Animation --- */
  --ease-editorial: cubic-bezier(0.2, 1, 0.2, 1);
}

/* =========================================
   2. RESET & BASE
   ========================================= */
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  background-color: var(--bg-color);
  color: var(--text-primary);
  font-family: var(--font-main);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
}

a {
  text-decoration: none;
  color: inherit;
  transition: all 0.3s var(--ease-editorial);
}

img,
video {
  display: block;
  width: 100%;
  height: auto;
}

/* =========================================
   3. LAYOUT UTILITIES
   ========================================= */
.wrapper {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.section-gap {
  margin-bottom: var(--space-32);
}

/* =========================================
   4. HEADER (Minimalist)
   ========================================= */
.site-header {
  padding: var(--space-8) 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-24);
}

.brand {
  font-size: var(--text-sm);
  font-weight: 600;
  letter-spacing: -0.01em;
  color: var(--text-primary);
  text-transform: uppercase;
}

.nav-contact {
  font-size: var(--text-sm);
  font-weight: 500;
  color: var(--text-secondary);
  padding: 10px 20px;
  border: 1px solid var(--border-subtle);
  border-radius: 100px;
  transition: all 0.3s ease;
}

.nav-contact:hover {
  border-color: var(--text-primary);
  color: var(--text-primary);
  background: rgba(255, 255, 255, 0.02);
}

/* =========================================
   5. HERO SECTION (Iconic)
   ========================================= */
.hero-section {
  padding-bottom: var(--space-32);
  border-bottom: 1px solid var(--border-subtle);
}

.hero-kicker {
  display: block;
  font-size: var(--text-xs);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  color: var(--text-secondary);
  margin-bottom: var(--space-8);
  padding-left: 2px;
}

.hero-headline {
  font-size: clamp(3.5rem, 8vw, var(--text-display));
  font-weight: 700;
  line-height: 1.05;
  letter-spacing: -0.04em;
  margin-bottom: var(--space-12);
  color: var(--text-primary);
  max-width: 90%;
}

.hero-subtext {
  font-size: clamp(1.125rem, 2vw, 1.5rem);
  color: var(--text-secondary);
  line-height: 1.5;
  max-width: 680px;
  margin-bottom: var(--space-16);
  font-weight: 400;
}

.hero-meta {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-8);
  padding-top: var(--space-8);
  border-top: 1px solid var(--border-subtle);
  max-width: 800px;
}

.meta-block h4 {
  font-size: var(--text-xs);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-tertiary);
  margin-bottom: var(--space-3);
}

.meta-block p {
  font-size: var(--text-sm);
  font-weight: 500;
  color: var(--text-secondary);
}

/* =========================================
   6. PROJECTS SECTION (Editorial Rhythm)
   ========================================= */
.projects-intro {
  margin-bottom: var(--space-16);
  margin-top: var(--space-32);
}

.section-title {
  font-size: var(--text-xl);
  font-weight: 500;
  letter-spacing: -0.02em;
  color: var(--text-primary);
}

.project-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-16);
  /* Large rhythm gap */
}

.project-row {
  display: grid;
  gap: var(--space-6);
}

.row-full {
  grid-template-columns: 1fr;
}

.row-split {
  grid-template-columns: 1fr 1fr;
}

/* --- Card Base --- */
.project-card {
  display: flex;
  background-color: var(--surface-card);
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-lg);
  overflow: hidden;
  transition: all 0.5s var(--ease-editorial);
  cursor: pointer;
  position: relative;
}

.project-card:hover {
  transform: translateY(-6px);
  background-color: var(--surface-hover);
  border-color: var(--border-highlight);
  box-shadow: 0 24px 48px rgba(0, 0, 0, 0.2);
}

/* --- Wide Card (Text Left, Image Right) --- */
.card-wide {
  flex-direction: row;
  align-items: stretch;
  min-height: 480px;
}

.card-wide .card-content {
  flex: 0 0 40%;
  padding: var(--space-12);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-wide .card-image-wrapper {
  flex: 1;
  height: auto;
  border-left: 1px solid var(--border-subtle);
}

/* --- Compact Card (Stacked for Split Rows) --- */
.card-compact {
  flex-direction: column;
  min-height: 520px;
}

.card-compact .card-image-wrapper {
  height: 280px;
  border-bottom: 1px solid var(--border-subtle);
}

.card-compact .card-content {
  padding: var(--space-8);
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* --- Content Styling --- */
.card-kicker {
  font-size: var(--text-xs);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-tertiary);
  margin-bottom: var(--space-3);
  font-weight: 600;
}

.card-title {
  font-size: var(--text-2xl);
  font-weight: 600;
  letter-spacing: -0.03em;
  color: var(--text-primary);
  margin-bottom: var(--space-3);
}

.card-desc {
  font-size: var(--text-base);
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--space-6);
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
  margin-bottom: var(--space-8);
}

.tag-pill {
  font-size: var(--text-xs);
  color: var(--text-secondary);
  background: rgba(255, 255, 255, 0.03);
  padding: 6px 14px;
  border-radius: 100px;
  border: 1px solid var(--border-subtle);
  font-weight: 500;
  transition: all 0.3s ease;
}

.project-card:hover .tag-pill {
  border-color: rgba(255, 255, 255, 0.2);
  color: var(--text-primary);
}

.card-cta {
  font-size: var(--text-sm);
  font-weight: 600;
  color: var(--text-primary);
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  margin-top: auto;
  transition: color 0.3s ease;
}

.project-card:hover .card-cta {
  color: var(--accent-color);
}

.card-image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.8s var(--ease-editorial), filter 0.5s ease;
  filter: grayscale(20%) brightness(0.9);
}

.project-card:hover .card-image-wrapper img {
  transform: scale(1.04);
  filter: grayscale(0%) brightness(1);
}

/* =========================================
   7. ABOUT & CAPABILITIES
   ========================================= */
.about-section {
  margin-top: var(--space-48);
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-16);
  padding-bottom: var(--space-24);
  border-bottom: 1px solid var(--border-subtle);
}

.about-text h3 {
  font-size: var(--text-sm);
  text-transform: uppercase;
  color: var(--text-tertiary);
  margin-bottom: var(--space-6);
  letter-spacing: 0.05em;
}

.about-text p {
  font-size: var(--text-lg);
  color: var(--text-secondary);
  line-height: 1.7;
  margin-bottom: var(--space-6);
}

.skills-grid {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-3);
  align-content: flex-start;
}

.skill-tag {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  border: 1px solid var(--border-subtle);
  padding: 10px 20px;
  border-radius: 100px;
  transition: all 0.3s ease;
}

.skill-tag:hover {
  border-color: var(--accent-color);
  color: var(--text-primary);
  background: rgba(75, 208, 192, 0.05);
}

/* =========================================
   8. TOOLS SECTION
   ========================================= */
.tools-section {
  padding: var(--space-16) 0;
  border-bottom: 1px solid var(--border-subtle);
}

.tools-grid {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-8);
}

.tool-item {
  font-size: var(--text-sm);
  color: var(--text-tertiary);
  font-weight: 500;
  transition: color 0.3s ease;
}

.tool-item:hover {
  color: var(--text-primary);
}

/* =========================================
   9. FINAL CTA (Iconic)
   ========================================= */
.final-cta {
  padding: var(--space-48) 0;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.final-cta::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 800px;
  height: 800px;
  background: radial-gradient(circle, rgba(75, 208, 192, 0.04) 0%, transparent 70%);
  z-index: -1;
  pointer-events: none;
}

.cta-headline {
  font-size: var(--text-2xl);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--space-8);
  letter-spacing: -0.02em;
}

.cta-sub {
  display: block;
  margin-top: var(--space-6);
  font-size: var(--text-sm);
  color: var(--text-tertiary);
}

.btn-accent {
  display: inline-block;
  background-color: var(--accent-color);
  color: #000;
  padding: 18px 36px;
  border-radius: 100px;
  font-weight: 600;
  font-size: var(--text-base);
  transition: transform 0.3s var(--ease-editorial), box-shadow 0.3s ease;
  border: none;
  cursor: pointer;
}

.btn-accent:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 24px rgba(75, 208, 192, 0.2);
  background-color: #5CE0D0;
}

/* =========================================
   10. MODAL (Redesigned)
   ========================================= */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.65);
  backdrop-filter: blur(4px);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-4);
}

.modal-backdrop.is-visible {
  opacity: 1;
  visibility: visible;
}

.modal-panel {
  background-color: #111111;
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-lg);
  padding: 32px;
  /* Increased padding */
  width: 100%;
  max-width: 600px;
  position: relative;
  transform: translateY(20px);
  transition: transform 0.3s var(--ease-editorial);
  box-shadow: 0 24px 48px rgba(0, 0, 0, 0.4);
}

.modal-backdrop.is-visible .modal-panel {
  transform: translateY(0);
}

.modal-close {
  position: absolute;
  top: 24px;
  right: 24px;
  width: 40px;
  height: 40px;
  background: none;
  border: none;
  color: var(--text-tertiary);
  cursor: pointer;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.2s ease;
  border-radius: 50%;
}

.site-footer {
  padding: var(--space-12) 0;
  display: flex;
  justify-content: space-between;
  color: var(--text-tertiary);
  font-size: var(--text-xs);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* =========================================
   12. RESPONSIVE
   ========================================= */
@media (max-width: 1024px) {
  .card-wide {
    flex-direction: column;
  }

  .card-wide .card-image-wrapper {
    height: 300px;
    border-left: none;
    border-bottom: 1px solid var(--border-subtle);
    order: -1;
  }

  .row-split {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .hero-headline {
    font-size: 3rem;
  }

  .hero-meta {
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  .about-section {
    grid-template-columns: 1fr;
    gap: var(--space-12);
  }

  .final-cta {
    padding: var(--space-24) 0;
  }
}

/* =========================================
   13. LEGACY SUPPORT (Project Pages)
   ========================================= */
.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 24px;
}

.text-display {
  font-size: clamp(2.5rem, 5vw, 4.5rem);
  font-weight: 700;
  color: var(--text-primary);
}

.text-h2 {
  font-size: 2rem;
  margin-top: 4rem;
  margin-bottom: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
}

.text-h3 {
  font-size: 1.5rem;
  margin-top: 2rem;
  margin-bottom: 1rem;
  font-weight: 600;
  color: var(--text-primary);
}

.text-h4 {
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
}

.text-body {
  font-size: 1rem;
  line-height: 1.6;
  color: var(--text-secondary);
  margin-bottom: 1.5rem;
  max-width: 680px;
}

.text-sm {
  font-size: 0.875rem;
}

.text-meta {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-tertiary);
}

.grid-2 {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.grid-3 {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.btn-primary {
  background: var(--text-primary);
  color: var(--bg-color);
  padding: 12px 24px;
  border-radius: 4px;
  display: inline-flex;
  font-weight: 600;
  align-items: center;
  gap: 8px;
}

.project-header {
  text-align: center;
  margin-bottom: 4rem;
  padding-top: 4rem;
}

.project-hero-img {
  width: 100%;
  border-radius: 8px;
  margin-top: 3rem;
  opacity: 0.9;
}

.meta-grid {
  display: flex;
  justify-content: center;
  gap: 3rem;
  margin-top: 2rem;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
  text-align: left;
}

.content-wrapper {
  max-width: 680px;
  margin: 0 auto;
}

.full-width-wrapper {
  width: 100%;
  margin: 4rem 0;
  background: var(--surface-color);
}

figure {
  margin: 3rem 0;
}

figcaption {
  text-align: center;
  color: var(--text-tertiary);
  font-size: 0.875rem;
  margin-top: 0.75rem;
}

blockquote {
  font-size: 1.5rem;
  font-style: italic;
  text-align: center;
  margin: 4rem auto;
  max-width: 800px;
  color: var(--text-primary);
  border-left-color: var(--text-primary);
}

.insight-box {
  background: var(--surface-color);
  padding: 2rem;
  border-radius: 8px;
  border-left: 3px solid var(--text-primary);
  margin: 2rem 0;
}